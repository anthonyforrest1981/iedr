<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC
        "-//OpenSymphony Group//XWork Validator Config 1.0//EN"
        "http://www.opensymphony.com/xwork/xwork-validator-config-1.0.dtd">

<validators>
    <validator name="domainName" class="domainNameValidator"/>

    <!-- checks, if the given value is a valid nic handle (uses contactSearchService to check, if nic handle exists in the database) -->
    <validator name="contact" class="contactValidator" />
    <validator name="phone" class="phoneValidator"/>
    <validator name="contactAccount" class="contactAccountValidator"/>
    <validator name="phoneLength" class="phoneLengthValidator"/>
    <validator name="category" class="categoryValidator"/>
    <validator name="emailgroup" class="emailGroupValidator"/>
    <validator name="fullEmail" class="emailValidator"/>

    <validator name="bigDecimalType" class="bigDecimalTypeValidator"/>
    <validator name="bigDecimalRange" class="bigDecimalRangeValidator"/>
    <validator name="bigDecimalScale" class="bigDecimalScaleValidator"/>

    <validator name="domainAdminContactDuplication" class="domainAdminContactDuplicationValidator"/>
    <validator name="ticketAdminContactDuplication" class="ticketAdminContactDuplicationValidator"/>

    <validator name="domainNameserverCount" class="domainNameserverCountValidator"/>
    <validator name="domainNameserverName" class="domainNameserverNameValidator"/>
    <validator name="domainNameserverDuplication" class="domainNameserverDuplicationValidator"/>
    <validator name="domainNameserverGlueRequired" class="domainNameserverGlueRequiredValidator"/>
    <validator name="domainNameserverGlueNotAllowed" class="domainNameserverGlueNotAllowedValidator"/>
    <validator name="domainNameserverIp" class="domainNameserverIPValidator"/>

    <validator name="ticketNameserverCount" class="ticketNameserverCountValidator"/>
    <validator name="ticketNameserverDomain" class="ticketNameserverDomainValidator"/>
    <validator name="ticketNameserverDuplication" class="ticketNameserverDuplicationValidator"/>
    <validator name="ticketNameserverGlueRequired" class="ticketNameserverGlueRequiredValidator"/>
    <validator name="ticketNameserverGlueNotAllowed" class="ticketNameserverGlueNotAllowedValidator"/>
    <validator name="ticketNameserverIp" class="ticketNameserverIpValidator"/>

    <validator name="accountDepositTopUpAmount" class="accountDepositTopUpAmountValidator"/>

</validators>
