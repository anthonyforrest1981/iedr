<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN" "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
    <field name="nicHandleWrapper.name">
        <field-validator type="requiredstring">
            <message>You must enter a value for Nic Handle Name</message>
        </field-validator>
    </field>
    <field name="nicHandleWrapper.address">
        <field-validator type="requiredstring">
            <message>You must enter a value for Addres</message>
        </field-validator>
    </field>
    <field name="nicHandleWrapper.countyId">
        <field-validator type="required">
            <message>You must enter a value for County</message>
        </field-validator>
    </field>
    <field name="nicHandleWrapper.countryId">
        <field-validator type="required">
            <message>You must enter a value for Country</message>
        </field-validator>
    </field>
    <field name="nicHandleWrapper.accountNumber">
        <field-validator type="long">
            <param name='min'>0</param>
            <message>You must enter a value for Account</message>
        </field-validator>
    </field>
    <field name="hostmastersRemark">
        <field-validator type="requiredstring">
            <message>You must enter a value for Hostmaster's Remark</message>
        </field-validator>
    </field>
    <field name="nicHandleWrapper.email">
        <field-validator type="requiredstring">
            <message>You must enter a value for E-mail</message>
        </field-validator>
        <field-validator type="fullEmail">
            <message>E-mail is not valid</message>
        </field-validator>
    </field>

    <field name="nicHandleWrapper.phonesWrapper">
        <field-validator type="phone">
            <message>You must enter value for Phone</message>
        </field-validator>
    </field>

    <field name="nicHandleWrapper.phonesWrapper">
        <field-validator type="phoneLength">
            <message>Phone number length exceeds 25 characters</message>
        </field-validator>
    </field>

    <field name="nicHandleWrapper.faxesWrapper">
        <field-validator type="phoneLength">
            <message>Fax number length exceeds 25 characters</message>
        </field-validator>
    </field>

    <field name="nicHandleWrapper.vatNo">
        <field-validator type="stringlength">
            <param name="maxLength">64</param>
            <message>Maximum 64 characters allowed</message>
        </field-validator>
    </field>
</validators>