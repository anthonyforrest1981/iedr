<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN" "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
    <field name="responseText">
        <field-validator type="requiredstring">
            <message>You must enter a value for Hostmaster's Remark</message>
        </field-validator>
        <field-validator type="stringlength">
            <param name="maxLength">10000</param>
            <message>Maximum ${maxLength} characters allowed</message>
        </field-validator>
    </field>
    <field name="buyRequest.domainHolder">
        <field-validator type="requiredstring">
            <message>You must enter a value for domain holder</message>
        </field-validator>
    </field>
    <field name="buyRequest.adminName">
        <field-validator type="requiredstring">
            <message>You must enter a value for admin name</message>
        </field-validator>
    </field>
    <field name="buyRequest.adminAddress">
        <field-validator type="requiredstring">
            <message>You must enter a value for address</message>
        </field-validator>
    </field>
    <field name="buyRequest.adminEmail">
        <field-validator type="requiredstring">
            <message>You must enter a value for E-mail</message>
        </field-validator>
        <field-validator type="fullEmail">
            <message>E-mail is not valid</message>
        </field-validator>
    </field>
    <field name="phonesWrapper">
        <field-validator type="phone">
            <message>You must enter value for phone</message>
        </field-validator>
        <field-validator type="phoneLength">
            <message>Phone number length exceeds 25 characters</message>
        </field-validator>
    </field>

    <field name="faxesWrapper">
        <field-validator type="phoneLength">
            <message>Fax number length exceeds 25 characters</message>
        </field-validator>
    </field>
</validators>
