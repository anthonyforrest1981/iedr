<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN"
        "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
    <field name="wrapper.code">
        <field-validator type="requiredstring">
            <message>You must enter a value for code</message>
        </field-validator>
        <field-validator type="stringlength">
            <param name="maxLength">16</param>
            <message>Maximum 16 characters allowed</message>
        </field-validator>
    </field>
    <field name="wrapper.description">
        <field-validator type="requiredstring">
            <message>You must enter a value for Description</message>
        </field-validator>
    </field>
    <field name="wrapper.price">
        <field-validator type="required">
            <message>You must enter a value for Price</message>
        </field-validator>
        <field-validator type="bigDecimalRange">
            <param name="min">0</param>
            <param name="max">999</param>
            <message>Allowed prices in range 0-999</message>
        </field-validator>
        <field-validator type="bigDecimalScale">
            <param name="maxScale">2</param>
            <message>No more than 2 decimal digits allowed</message>
        </field-validator>
    </field>
    <field name="wrapper.duration">
        <field-validator type="required">
            <message>You must enter a value for Duration</message>
        </field-validator>
    </field>
    <field name="wrapper.validFrom">
        <field-validator type="required">
            <message>You must enter a value for Valid From</message>
        </field-validator>
        <field-validator type="date">
            <param name="min">01/01/1900</param>
            <param name="max">01/01/2999</param>
            <message>The date must be between 1900 and 2999</message>
        </field-validator>
    </field>
    <field name="wrapper.validTo">
        <field-validator type="required">
            <message>You must enter a value for Valid To</message>
        </field-validator>
        <field-validator type="date">
            <param name="min">01/01/1900</param>
            <param name="max">01/01/2999</param>
            <message>The date must be between 1900 and 2999</message>
        </field-validator>
        <field-validator type="fieldexpression">
            <param name="expression">wrapper.validTo gt wrapper.validFrom</param>
            <message>"Valid To" cannot be earlier than "Valid From"</message>
        </field-validator>
    </field>
</validators>