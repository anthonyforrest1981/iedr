<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="domainsSqlMapClient"
        class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
        <property name="configLocation" value="classpath:/domains-sql-map-config.xml" />
        <property name="dataSource" ref="dataSource" />
    </bean>

    <bean id="plainDomainDAO" class="pl.nask.crs.domains.dao.ibatis.PlainDomainIBatisDAO">
        <property name="sqlMapClient" ref="domainsSqlMapClient" />
    </bean>

    <bean id="deletedDomainDAO" class="pl.nask.crs.domains.dao.ibatis.DeletedDomainIBatisDAO">
        <constructor-arg ref="applicationConfig" />
        <property name="sqlMapClient" ref="domainsSqlMapClient" />
    </bean>

    <bean id="internalDomainDAO"
        class="pl.nask.crs.domains.dao.ibatis.InternalDomainIBatisDAO">
        <property name="sqlMapClient" ref="domainsSqlMapClient" />
    </bean>

    <bean id="domainConverter"
        class="pl.nask.crs.domains.dao.ibatis.converters.DomainConverter" />

    <bean id="domainDAO" class="pl.nask.crs.domains.dao.ibatis.ConvertingDomainDAO">
        <constructor-arg ref="internalDomainDAO" />
        <constructor-arg ref="domainConverter" />
    </bean>

    <bean id="internalExtendedDomainDAO"
        class="pl.nask.crs.domains.dao.ibatis.InternalExtendedDomainIBatisDAO">
        <property name="sqlMapClient" ref="domainsSqlMapClient" />
    </bean>

    <bean id="extendedDomainConverter"
        class="pl.nask.crs.domains.dao.ibatis.converters.ExtendedDomainConverter" />

    <bean id="extendedDomainDAO" class="pl.nask.crs.domains.dao.ibatis.ConvertingExtendedDomainDAO">
        <constructor-arg ref="internalExtendedDomainDAO" />
        <constructor-arg ref="extendedDomainConverter" />
    </bean>

    <bean id="domainCountForContactDAO"
        class="pl.nask.crs.domains.dao.ibatis.DomainCountForContactIBatisDAO">
        <property name="sqlMapClient" ref="domainsSqlMapClient" />
    </bean>

    <bean id="internalHistoricalDomainDAO"
        class="pl.nask.crs.domains.dao.ibatis.InternalHistoricalDomainIbatisDAO">
        <property name="sqlMapClient" ref="domainsSqlMapClient" />
    </bean>

    <bean id="historicalDomainConverter"
        class="pl.nask.crs.domains.dao.ibatis.converters.HistoricalDomainConverter" />

    <bean id="historicalDomainDAO"
        class="pl.nask.crs.domains.dao.ibatis.HistoricalDomainConvertingDAO">
        <constructor-arg ref="internalHistoricalDomainDAO" />
        <constructor-arg ref="historicalDomainConverter" />
    </bean>

    <bean id="domainSearchService"
        class="pl.nask.crs.domains.services.impl.DomainSearchServiceImpl">
        <constructor-arg ref="plainDomainDAO" />
        <constructor-arg ref="deletedDomainDAO" />
        <constructor-arg ref="domainDAO" />
        <constructor-arg ref="extendedDomainDAO" />
        <constructor-arg ref="domainCountForContactDAO" />
    </bean>

    <bean id="dsmDao" class="pl.nask.crs.domains.dsm.DsmDAOImpl">
        <property name="sqlMapClient" ref="domainsSqlMapClient" />
    </bean>

    <bean id="dsmActionFactory" class="pl.nask.crs.domains.dsm.DsmActionFactory">
        <constructor-arg ref="applicationConfig" />
        <constructor-arg ref="emailTemplateSender" />
        <constructor-arg ref="contactDAO" />
        <constructor-arg ref="nicHandleDAO" />
    </bean>

    <bean id="dsmMachine" class="pl.nask.crs.domains.dsm.DomainStateMachineImpl">
        <constructor-arg ref="dsmDao" index="0" />
        <constructor-arg ref="domainDAO" index="1" />
        <constructor-arg ref="applicationConfig" index="2" />
        <constructor-arg ref="dsmActionFactory" index="3" />
        <property name="domainService" ref="domainService" />
    </bean>

    <bean id="domainService" class="pl.nask.crs.domains.services.impl.DomainServiceImpl">
        <constructor-arg ref="domainDAO" />
        <constructor-arg ref="extendedDomainDAO" />
        <constructor-arg ref="historicalDomainDAO" />
        <constructor-arg ref="nicHandleSearchService" />
        <constructor-arg ref="ticketSearchService" />
        <constructor-arg ref="applicationConfig" />
        <constructor-arg ref="dsmMachine" />
        <constructor-arg ref="emailTemplateSender" />
        <constructor-arg ref="countryFactory" />
        <constructor-arg ref="whoisService" />
        <property name="servicesRegistry" ref="services" />
    </bean>

    <bean id="historicalDomainService"
        class="pl.nask.crs.domains.services.impl.HistoricalDomainServiceImpl">
        <constructor-arg ref="historicalDomainDAO" />
    </bean>

    <bean id="bulkTransferDAO" class="pl.nask.crs.domains.dao.ibatis.BulkTransferIBatisDAO">
        <property name="sqlMapClient" ref="domainsSqlMapClient" />
    </bean>

    <bean id="bulkTransferService"
        class="pl.nask.crs.domains.services.impl.BulkTransferServiceImpl">
        <constructor-arg ref="bulkTransferDAO" />
        <constructor-arg ref="domainDAO" />
        <constructor-arg ref="accountSearchService" />
        <constructor-arg ref="nicHandleSearchService" />
        <constructor-arg ref="nicHandleService" />
        <constructor-arg ref="resellerDefaultsService" />
        <constructor-arg ref="domainSearchService" />
        <constructor-arg ref="domainService" />
        <constructor-arg ref="dsmMachine" />
        <constructor-arg ref="emailTemplateSender" />
    </bean>

</beans>
